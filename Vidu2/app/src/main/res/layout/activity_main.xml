<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.vankhanhpr.vidu2.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:id="@+id/fragment_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:visibility="visible"
                android:orientation="vertical">
            </LinearLayout>
            <com.example.vankhanhpr.vidu2.library_bottomnagi.BottomNavigationViewEx
                android:id="@+id/bottom_navigation_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                design:menu="@menu/menumain" />
        </LinearLayout>
        <TextView
            android:id="@+id/disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dont_connection"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/view_disconnect"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
