<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vankhanhpr.vidu2.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:id="@+id/fragment_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:visibility="visible"
                android:orientation="vertical">
            </LinearLayout>
            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottom_navigation_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown"
                android:layout_alignParentBottom="true"
                android:theme="@style/NavigationViewStyle"
                app:theme="@style/NavigationViewStyle"
                android:itemTextAppearance="@style/NavigationViewStyle"
                app:menu="@menu/menumain" />
        </LinearLayout>
        <TextView
            android:id="@+id/disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có kết nối"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/view_disconnect"/>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
