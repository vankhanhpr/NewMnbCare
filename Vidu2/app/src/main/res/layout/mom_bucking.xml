<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/choose_provine_top_bar"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="@color/brown"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/back_bucking"
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:padding="10.0dip"
                    android:src="@drawable/back" />
            </LinearLayout>

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/back_file_mom"
                android:ellipsize="end"
                android:focusable="true"
                android:text="Đặt lịch khám"
                android:gravity="center"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/brown"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading10dip"
            android:weightSum="10">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Ngày đặt khám"
                android:layout_weight="4.5"
                android:textSize="@dimen/text_size_big"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <ImageView
                android:id="@+id/imv_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/icon_calendar"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/brown"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/brown"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading10dip"
            android:weightSum="10">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Giờ đặt khám"
                android:layout_weight="4.5"
                android:textSize="@dimen/text_size_big"/>
            <TextView
                android:id="@+id/tv_time_bucket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <ImageView
                android:id="@+id/imv_time_bucking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/icon_time_set2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/brown"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"/>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pading10dip"
            android:weightSum="10">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Giờ khám dự kiến"
                android:layout_weight="4.5"
                android:textSize="@dimen/text_size_big"/>
            <TextView
                android:id="@+id/time_expected"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <ImageView
                android:id="@+id/kj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:background="@drawable/icon_time3"/>
        </LinearLayout>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_bucking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt khám"/>
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_bucking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>
