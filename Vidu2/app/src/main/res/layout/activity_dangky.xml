<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.mnb.nhap_sdt"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập và xác nhận lại mật khẩu của bạn"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/editText_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="mật khẩu"
            android:layout_weight="0"
            android:ems="11"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/editText_passagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="mật khẩu"
            android:layout_weight="0"
            android:ems="11"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btn_tieptucdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục >"
            android:textColor="#2E64FE"
            android:background="#FFF"
            />
        <Button
            android:id="@+id/btn_quaylaidk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:textColor="#2E64FE"
            android:background="#FFF"
            />
    </LinearLayout>
</LinearLayout>
